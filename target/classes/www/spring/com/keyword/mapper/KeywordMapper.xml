<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
 "-//mybatis.org//DTD Mapper 3.0//EN" 
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="www.spring.com.keyword.mapper.KeywordMapper">
	<resultMap id="rm4Keyword"
		type="www.spring.com.keyword.model.Keyword">
		<id property="keywordId" column="id" />
		<result property="word" column="word" />
	</resultMap>
	
	<select id="selectKeywordIn" resultMap="rm4Keyword">
		select id,word
		  from t_keyword
		 where word in
		 <!-- '가','나',... -->
		 <foreach item="beKeyword" collection="list" open="(" separator="," close=")">
		 	#{beKeyword}
		 </foreach>
	</select>
	
	<insert id="insertKeyword">
		<!-- 생성된 identifier가 주어진 객체에 자동적으로 채워진다. -->
		<selectKey keyProperty="keywordId" resultType="int" order="BEFORE">
			select
			seq_Keyword.nextval FROM DUAL
		</selectKey>
		INSERT INTO t_keyword(id, word) 
		VALUES ( #{keywordId}, #{word, jdbcType=VARCHAR}) 
	</insert>
	
	<!-- foreach를 통한 키워드 insert문 
	<insert id="insertKeyword" >
		insert into t_keyword(id, word)
		select seq_keyword.nextval, A.* from(
		 <foreach item="keyword" collection="list" separator="UNION ALL " >
		   select #{keyword.word} 
		   from dual
		 </foreach>) A
	</insert> -->
	
</mapper>